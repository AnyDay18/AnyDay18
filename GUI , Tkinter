import tkinter as tk from tkinter import messagebox
# Create the main window window = tk.Tk() 
window.title("Greeting Application") window.geometry("300x150") 
# Create a label for instructions instructions_label = tk.Label(window, text="Enter your name:") instructions_label.pack(pady=10) 
# Create an entry widget for the name name_entry = tk.Entry(window) name_entry.pack() 
# Get the entered name  
name = name_entry.get()  
# Check if the name is empty 
if not name:  messagebox.showerror("Error", "Please enter your name.")  
return  
# Display the greeting message  messagebox.showinfo("Greeting", f"Hello, {name}! Nice to meet you.") 
greet_button = tk.Button(window, text="Greet", command=greet) greet_button.pack(pady=10) 
Code window.mainloop() 
